        <h2>User info</h2>
        <%= attachment_image_tag(@user.profile_image, :profile_image, :fill, 63, 63, fallback: "no_image.jpg", size: '63x63', class:"attachment user profile_image fallback") %>
        <table class="table">
          <tbody><tr></tr>
            <tr>
              <th>name</th>
              <th><p><%= @user.name %></p></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><p><%= @user.introduction %></p></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if current_user.id == @user.id %>
            <%= link_to edit_user_path(@user.id) ,class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
            <% end %>
          <% else %>
            <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
            <% end %>
          <% end %>
        </div>
