        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 63, 63, fallback: "no_image.jpg", size: '63x63', class:"attachment user profile_image fallback" %>
        <table class="table">
          <tbody><tr></tr>
            <tr>
              <th>name</th>
              <th><p><%= @user.name %></p></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><p><%= @user.introduction %></p></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
        </div>
