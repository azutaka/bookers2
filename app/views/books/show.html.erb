<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <!-- User Info -->
        <%= render 'layouts/userInfo', user: @user %>
        <!-- New Book -->
        <%= render 'layouts/newBook' %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40', class:"attachment user profile_image fallback" %><br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td><p><%= @book.title %></p></td>
              <td><p><%= @book.body %></p></td>
              <% if current_user.id == @book.user_id %>
                <td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success' %></td>
                <td><%= link_to "Destroy", book_path(@book), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "本当に消しますか？" } %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
